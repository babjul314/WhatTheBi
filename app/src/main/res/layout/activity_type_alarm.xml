<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="227dp"
        android:layout_height="32dp"
        android:text="어떤 종류의 날씨를"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.3"
        android:textSize="30dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorWhite"
        app:layout_constraintHorizontal_bias="0.269" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알람을 받으시겠습니까?"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="198dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:textSize="30dp"
        android:textColor="@color/colorWhite"
        />

    <CheckBox
        android:id="@+id/checkBox_type_alarm_rain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비오는날"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/checkBox_type_alarm_dust"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.456"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_type_alarm_hot" />

    <CheckBox
        android:id="@+id/checkBox_type_alarm_dust"
        android:layout_width="129dp"
        android:layout_height="30dp"
        android:text="미세먼지 많은날"
        android:layout_marginRight="39dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_type_alarm_cold" />

    <CheckBox
        android:id="@+id/checkBox_type_alarm_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더운날"
        app:layout_constraintRight_toLeftOf="@+id/checkBox_type_alarm_cold"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        android:layout_marginBottom="113dp" />

    <CheckBox
        android:id="@+id/checkBox_type_alarm_cold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추운날"
        android:layout_marginRight="97dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="113dp" />

    <Button
        android:id="@+id/button_type_alarm_cold_submit"
        android:layout_width="93dp"
        android:layout_height="31dp"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.918"
        android:text="다음"
        android:background="@drawable/btn_border"
        android:textColor="@color/colorWhite"/>


</android.support.constraint.ConstraintLayout>