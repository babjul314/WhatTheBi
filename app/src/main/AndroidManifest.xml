<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.shinhan.whatthebi">

    <uses-permission android:name="android.permission.LOCATION_HARDWARE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ColdActivity" />
        <activity android:name=".CompleteActivity" />
        <activity android:name=".EndActivity" />
        <activity android:name=".HotActivity" />
        <activity android:name=".PhoneActivity" />
        <activity android:name=".SendWayActivity" />
        <activity android:name=".SingInActivity" />
        <activity android:name=".TimeActivity" />
        <activity android:name=".TypeAlarmActivity" />
        <activity android:name=".WhereActivity" />

        <receiver
            android:name=".AlarmBroadCastReciever"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".AlramActivity"
            android:label="@string/title_activity_alram"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".alamColdActivity"
            android:label="@string/title_activity_alam_cold"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".alamHotActivity"
            android:label="@string/title_activity_alam_hot"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".alamRainActivity"
            android:label="@string/title_activity_alam_rain"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>